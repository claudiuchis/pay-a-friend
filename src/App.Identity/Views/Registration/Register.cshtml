@model App.Identity.Registration.RegisterViewModel

<div class="login-page">
    <div class="lead">
        <h1>Register</h1>
    </div>
</div>

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h2>Local Account</h2>
            </div>

            <div class="card-body">
                <form asp-route="Register">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input class="form-control" placeholder="FullName" asp-for="FullName" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" placeholder="Email" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                    </div>
                    <button class="btn btn-primary" name="button" value="register">Register</button>
                    <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>